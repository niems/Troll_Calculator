<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#444444"
    tools:context="com.example.niems.calculator.Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/display_view"
        android:text="\n\n\n"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:textSize="50sp"

        android:background="#1985a1"
        android:textColor="#46494c"
        />
    </LinearLayout>

    <!-- First Row -->
    <Button
        android:id="@+id/button_7"
        android:text="7"
        android:onClick="numberClick"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_8"
        android:text="8"
        android:onClick="numberClick"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/button_7"
        android:layout_toEndOf="@id/button_7"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_9"
        android:text="9"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_8"
        android:layout_toEndOf="@id/button_8"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/clear"
        android:text="C"
        android:onClick="clearTotal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/button_9"
        android:layout_toEndOf="@id/button_9"

        android:textSize="20sp"
        android:layout_marginTop="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>


    <!-- Second Row -->
    <Button
        android:id="@+id/button_4"
        android:text="4"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_7"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_5"
        android:text="5"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_7"
        android:layout_toEndOf="@id/button_4"
        android:layout_toRightOf="@id/button_4"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"
        />

    <Button
        android:id="@+id/button_6"
        android:text="6"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_7"
        android:layout_toRightOf="@id/button_5"
        android:layout_toEndOf="@id/button_5"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"
        />

    <Button
        android:id="@+id/button_divide"
        android:text="/"
        android:onClick="operatorClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_7"
        android:layout_toEndOf="@id/button_6"
        android:layout_toRightOf="@id/button_6"

        android:textSize="20sp"
        android:layout_marginTop="5sp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"
        />

    <!-- Third Row -->
    <Button
        android:id="@+id/button_1"
        android:text="1"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_4"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"
    />

    <Button
        android:id="@+id/button_2"
        android:text="2"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_4"
        android:layout_toEndOf="@id/button_1"
        android:layout_toRightOf="@id/button_1"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_3"
        android:text="3"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_4"
        android:layout_toEndOf="@id/button_2"
        android:layout_toRightOf="@id/button_2"

        android:padding="5dp"
        android:textSize="20sp"
        android:layout_margin="5dp"

         android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_multiply"
        android:text="x"
        android:onClick="operatorClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_4"
        android:layout_toEndOf="@id/button_3"
        android:layout_toRightOf="@id/button_3"

        android:textSize="20sp"
        android:layout_marginTop="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"
        />

    <!-- Row Four -->
    <Button
        android:id="@+id/button_subtract"
        android:text="-"
        android:onClick="operatorClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_1"

        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_0"
        android:text="0"
        android:onClick="numberClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_1"
        android:layout_toEndOf="@id/button_subtract"
        android:layout_toRightOf="@id/button_subtract"

        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_add"
        android:text="+"
        android:onClick="operatorClick"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_1"
        android:layout_toRightOf="@id/button_0"
        android:layout_toEndOf="@id/button_0"

        android:textSize="20sp"
        android:layout_margin="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

    <Button
        android:id="@+id/button_equals"
        android:text="="

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_1"
        android:layout_toEndOf="@id/button_add"
        android:layout_toRightOf="@id/button_add"

        android:textSize="20sp"
        android:layout_marginTop="5dp"

        android:background="@color/calcButtonBackground"
        android:textColor="@color/calcButtonText"/>

</RelativeLayout>
